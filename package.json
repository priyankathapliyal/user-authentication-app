{
  "name": "user-authentication-app",
  "version": "1.0.0",
  "description": "The application implements the login page for the user.Restful API for user authentication using node.js express framework",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-views": "ts-node tools/copyViews",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "build": "npm-run-all clean lint tsc copy-views",
    "dev:start": "npm-run-all build start",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "start": "node .",
    "test": "mocha -r ts-node/register test/*.test.ts"
  },
  "author": "Priyanka Thapliyal",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.15",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/fs-extra": "^9.0.8",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.35",
    "@types/shelljs": "^0.8.8",
    "chai": "^4.3.4",
    "chai-http": "^4.3.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.3.2",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
